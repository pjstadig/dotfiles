# A script to mount my secure Dropbox filesystem.

set -eu

. "${HOME}/bin/lib/require.bash"

require log
require packages

if ! package-installed encfs; then
  log "+++ Installing encfs"
  install-packages encfs >> "${logfile}"
else
  debug "=== Skipping installing encfs"
fi

if [ -d "${HOME}/secure-dropbox" ]; then
  log "!!! ${HOME}/secure-dropbox already exists"
  exit 1
fi

debug "=== Making ${HOME}/secure-dropbox"
if ! mkdir ~/secure-dropbox; then
  log "!!! Failed making ${HOME}/secure-dropbox"
  exit 1
fi

debug "=== Mounting ${HOME}/secure-dropbox"
if ! encfs ~/Dropbox/secure ~/secure-dropbox; then
  log "!!! Failed mounting ${HOME}/secure-dropbox"
  exit 1
fi
