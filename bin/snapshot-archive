#!/usr/bin/env bash

# https://vaneyckt.io/posts/safer_bash_scripts_with_set_euxo_pipefail/
set -Eeuo pipefail

echo "== START = $(date)" | tee .snapshot-archive.log
if ! (mount-secure-backup &&
        rsync_tmbackup.sh ~/archive ~/secure-backup) 2>&1 | tee -a .snapshot-archive.log; then
  failed=true
fi
echo "==   END = $(date)" | tee -a .snapshot-archive.log
if [ "${failed:-false}" = "true" ]; then
  echo "Snapshot failed!"
fi
